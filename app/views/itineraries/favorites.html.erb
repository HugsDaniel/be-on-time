  <div class="itineraries--info" style="height:70vh;">
    <div class="container">
      <div class="itineraries--summary d-flex flex-column mb-4">
        <div class="summary--departure d-inline-flex align-items-center">
            <% @itineraries_fav.each_with_index do |itinerary, index| %>
                <div class="trip-option">
                    <h2>Itin√©raire <%= index + 1 %></h2>
                    <div class="trip d-flex justify-content-between">
                    <% itinerary.itinerary_buses.each_with_index do |iti_bus, index| %>
                            <div class="trip-step ">


                            <div class="btn-line-big" style="background-color:<%= @colours[index] %>; font-size:<%= 64 / iti_bus.bus.star_line_short_name.length%>px;"> <%= @star_short_name %></div>

                            <h3><%= iti_bus.bus.star_line_short_name %></h3>
                            <h2><%= arrives_after(iti_bus.departing_time) %> min</h2>
                            </div>
                        <% end %>
                        <div class="trip-step">
                            <%= image_tag("end_point.svg")%>
                            <h3><%= trip_time(itinerary.arrival_time) %> min </h3>
                        </div>

                        <div class="trip-detail-button align-self-center">
                            <%= link_to itinerary_path(itinerary) do %>
                            <%= image_tag("details.svg")%>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>

