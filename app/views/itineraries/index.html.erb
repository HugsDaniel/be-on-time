<style>
  body {
      position: fixed;
      height: 100%;
      width: 100%;
  }
</style>

<div class="d-none" id="coordinates" data-coordinates="<%= @route %>"></div>
<div>
  <div class="container">
    <%= form_tag itineraries_path, method: :get, html: { class: 'itineraries' }  do %>
      <%= text_field_tag :departure,
        params[:departure],
        class: "form-control w-100 address-input",
        placeholder: "Départ"
       %>
       <div class="arrival d-flex">
        <%= text_field_tag :arrival,
          params[:arrival],
          class: "form-control w-100 address-input",
          placeholder: "Arrivée"
        %>
        <div><%= submit_tag "Go", class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>


<%# BARRES DE RECHERCHES %>
<% if params[:departure] && params[:arrival] %>
  <div class="itineraries--info">
    <div class="container">
      <div class="itineraries--summary d-flex flex-column mb-4">
        <div class="summary--departure d-inline-flex align-items-center">

           <%= image_tag("starting_point.svg")%>

          <span> <span class="sub-info">Départ </span><%= params[:departure] %></span>

        </div>


        <%= image_tag("route.svg",style: 'width: 4px; height: 21px; margin: 5px 0px 5px 7px' )%>

        <div class="summary--arrival d-inline-flex align-items-center">

           <%= image_tag("end_point.svg")%>
          <span> <span class="sub-info">Arrivée </span><%= params[:arrival] %></span>
        </div>
      </div>


      <% @itineraries.each_with_index do |itinerary, index| %>
        <div class="trip-option">
          <h2>Itinéraire <%= index + 1 %></h2>


          <div class="trip d-flex justify-content-between">

            <% itinerary.itinerary_buses.each_with_index do |iti_bus, index| %>
              <div class="trip-logos">
                <div class="trip-step ">
                  <div class="btn-line-sm" style=" color: black; background-color:<%= @colours[index] %>; font-size:<%= 32 / iti_bus.bus.star_line_short_name.length%>px;"> <span class="shortName"><%= @star_short_name %></span></div>
                    <div class="arret-depart">Arret</div>
                    <div class="next-bus"><%= arrives_after(iti_bus.departing_time).abs %> min</div>
                  </div>
                </div>


                <h3><%= iti_bus.bus.star_line_short_name %></h3>
                <h2><%= arrives_after(iti_bus.departing_time) %> min</h2>

                <div class="line"></div>

                <div class="trip-step">
                  <%= image_tag("end_point.svg")%>
                  <div class="arret-end">Arret</div>
                    <div class="bus-arrival-time"><%= trip_time(itinerary.arrival_time) %> min </div>
                  </div>
                </div>
              </div>

              <div class="bus-status-container">

                <%= image_tag("smell.svg",class: "active") if iti_bus.bus.bad_smell_level %>
                <%= image_tag("trash.svg",class: "active") if iti_bus.bus.cleanliness_level %>
                <%= image_tag("agent.svg",class: "active") if iti_bus.bus.agent %>
                <%= image_tag("noise.svg",class: "active") if iti_bus.bus.noise_level %>
                <%= image_tag("unsafe.svg",class: "active") if iti_bus.bus.safetiness %>
                <%= image_tag("crowded.svg", class: "active") if iti_bus.bus.crowd_level %>
              </div>

              <div class="trip-detail-button align-self-center">
                <%= link_to itinerary_path(itinerary) do %>
                  <%= image_tag("arrow.svg")%>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="bookmark">
    <div class="star"><i class="fas fa-star"></i></div>
  </div>
  <div class="profile">
    <div class="menu-main">
      <%# <img src="bell.svg" alt="My Happy SVG" /> %>
      <%= image_tag("bell.svg", class: "bell") %>
      <%= link_to image_tag("signout.svg", class: "signoutsvg"), destroy_user_session_path, :method => :delete, :confirm => "Are you sure?" %>
    </div>
  </div>
<% end %>
