
<div >
  <div class="exit-btn"> <%= image_tag("exit.svg")%> </div>

  <div class="intinerary-infos itinerary-collapse">
    <div class="line-logo-big">

      <div class="btn-line-big" style="background-color:<%= @colour_line %>; font-size:<%= 64 / @star_short_name.length%>px;"> <%= @star_short_name %></div>

      <div class="btn-expand btn-rotate"> <%= image_tag("expand.svg")%> </div>
    </div>

    <div class="direction-terminus">
      <span class="direction">
      Direction
      </span>
      <%= @direction%>
    </div>

  <div class="container">
      <%# Bloc Ã  loop %>
      <div class="bus-infos">
        <div class="d-flex justify-content-between">
          <div class="left-info">
            <%= image_tag("bus.svg")%>
            <span class="bus-to-stop"><%= arrives_after(@iti_bus.departing_time) %> min.</span>
          </div>
          <div class="right-info">
              <div class="status-svg">
                <%= @image_garbage.html_safe if (@bus.cleanliness_level)%>
                <%= @image_thief.html_safe if @bus.safetiness%>
                <%= @image_speaker.html_safe if @bus.noise_level%>
                <%= @image_nose.html_safe if @bus.bad_smell_level%>
                <%= @image_people.html_safe if  @bus.crowd_level%>
                <%= @image_agent.html_safe if @bus.agent%>
                </div>
          </div>
        </div>
      <%= link_to trip_path(@itinerary) do %>  
        <div class="mt-3 btn btn-primary btn-block btn-fade">I'm in the bus</div>
      <% end %>  
    </div>
    <%# End %>

    <div class="bus-infos d-flex">
      <div class="left-info">
        <%= image_tag("bus.svg")%>
        <span class="bus-to-stop">15 min.</span>
      </div>
      <div class="right-info">
        <div class="bus-status">
          <%= image_tag("noise.svg")%>
          <%= image_tag("smell.svg")%>
        </div>
      </div>
    </div>

    <div class="bus-infos d-flex">
      <div class="left-info">
        <%= image_tag("bus.svg")%>
        <span class="bus-to-stop">20 min.</span>
      </div>
      <div class="right-info">
        <div class="bus-status">
          <%= image_tag("agent.svg")%>
          <%= image_tag("noise.svg")%>
        </div>
      </div>
    </div>
  </div>
</div>

